<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DangNhapActivity"
    android:orientation="vertical">
    <TextView
        android:drawableEnd="@drawable/ic_person"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@color/red"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="TẠO TÀI KHOẢN"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_wave"/>
    <EditText
        android:drawableLeft="@drawable/ic_username"
        android:gravity="center"
        android:id="@+id/edit_taikhoan_dangky"
        android:hint="Nhập tài khoản"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/bogoc"/>
    <EditText
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_password"
        android:inputType="textPassword"
        android:id="@+id/edit_nhapmatkhau_dangky"
        android:hint="Nhập mật khẩu"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/bogoc"/>
    <EditText
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_password"
        android:inputType="textPassword"
        android:id="@+id/edit_nhaplaimatkhau_dangky"
        android:hint="Nhập lại mật khẩu"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/bogoc"/>

    <RadioGroup
       android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:background="@drawable/bogoc"
            android:id="@+id/radiobutton_nhanvien"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Nhân viên"/>
        <RadioButton
            android:background="@drawable/bogoc"
            android:id="@+id/radiobutton_khachhang"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Khách hàng"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_dangky"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:text="Đăng ký"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc"/>
    <Button
        android:id="@+id/btn_trolai"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:text="Trở lại"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc"/>
</LinearLayout>