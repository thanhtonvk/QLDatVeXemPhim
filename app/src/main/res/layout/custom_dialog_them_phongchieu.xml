<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:drawableEnd="@drawable/ic_add"
        android:gravity="center"
        android:text="Thêm phòng chiếu"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_wave" />

    <EditText
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Số chỗ"
        android:id="@+id/edit_socho"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bogoc"/>
    <EditText
        android:inputType="datetime"
        android:layout_marginTop="10dp"
        android:id="@+id/edit_maychieu"
        android:gravity="center"
        android:hint="Máy chiếu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bogoc"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edit_tinhtrang"
        android:gravity="center"
        android:hint="Tình trạng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bogoc"/>
    <Button
        android:id="@+id/btn_dialog_themphongchieu"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:background="@drawable/bogoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm phòng chiếu"/>
</LinearLayout>