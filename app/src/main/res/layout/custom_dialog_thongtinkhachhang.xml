<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/red"
        android:drawableEnd="@drawable/ic_person"
        android:gravity="center"
        android:text="THÔNG TIN KHÁCH HÀNG"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_wave" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mật khẩu: "
        android:textColor="@color/red" />

    <EditText
        android:id="@+id/edit_matkhau_thongtinkhachhang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc"
        android:gravity="center"
        android:hint="Mật khẩu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Họ tên: "
        android:textColor="@color/red" />

    <EditText
        android:id="@+id/edit_hoten_thongtinkhachhang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc"
        android:gravity="center"
        android:hint="Họ tên" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ngày sinh: "
        android:textColor="@color/red" />

    <EditText
        android:id="@+id/edit_ngaysinh_thongtinkhachhang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc"
        android:gravity="center"
        android:hint="Ngày sinh"
        android:inputType="datetime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Số điện thoại: "
        android:textColor="@color/red" />

    <EditText
        android:id="@+id/edit_sodienthoai_thongtinkhachhang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc"
        android:gravity="center"
        android:hint="Số điện thoại"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Số CMND: "
        android:textColor="@color/red" />

    <EditText
        android:id="@+id/edit_socmnd_thongtinkhachhang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc"
        android:gravity="center"
        android:hint="Số CMND"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_capnhat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/red"
            android:text="Cập nhật"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_xoataikhoan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/red"
            android:text="Xóa tài khoản"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>